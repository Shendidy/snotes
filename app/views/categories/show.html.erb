<h1><%= @category[:name] %></h1>
<small> <%= @category[:created_at].strftime("%b %d. %Y - %H:%M:%S") %> </small>
<hr>
<h2>Description:</h2>
<p><%= @category[:description] %></p>
<h2>Owner ID:</h2>
<p><%= @category[:owner_id] %></p>
<% @notes.each do |note| %>
  <p><%= link_to note.title, note_path(:id => note.id) %></p>
<% end %>
<hr />
<small> <%= link_to 'Edit category', action: 'edit' %> -
  <%= link_to 'Back to categories', action: 'index' %> -
  <%= link_to 'Delete category and all notes related to it', @category, :method => :delete, data: { confirm: "Are you sure you want to delete this category with all notes related to it?\n\nOnce done you can\'t revoke this action!" } %>
</small>
